{
  "name": "open-meeting-tests",
  "version": "0.1.0",
  "description": "Open Meeting 项目测试套件",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config tests/jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config tests/jest.config.js --testPathPattern=tests/integration",
    "test:e2e": "playwright test --config tests/playwright.config.ts",
    "test:e2e:ui": "playwright test --config tests/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config tests/playwright.config.ts --headed",
    "test:e2e:chromium": "playwright test --config tests/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test --config tests/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test --config tests/playwright.config.ts --project=webkit",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker-compose.test.yml down",
    "docker:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "playwright:install": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "test",
    "jest",
    "playwright",
    "e2e",
    "integration"
  ],
  "author": "Open Meeting Team",
  "license": "MIT"
}
